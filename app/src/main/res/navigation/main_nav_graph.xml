<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/locationSelectionFragment">

    <fragment
        android:id="@+id/locationSelectionFragment"
        android:name="com.example.weatherapplication.FirstPage.LocationSelectionFragment"
        android:label="LocationSelectionFragment" >
        <action
            android:id="@+id/action_locationSelectionFragment_to_weatherFragment"
            app:destination="@id/weatherFragment" >
            <argument
                android:name="city"
                app:argType="string"
                app:nullable="true"
                />
        </action>
    </fragment>
    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.weatherapplication.WeatherFragment"
        android:label="WeatherFragment" >
        <argument
            android:name="city"
            app:argType="string"
            app:nullable="true"
            />
    </fragment>

</navigation>